<Window x:Class="Lab07.InsertarClienteForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Insertar Cliente" Height="300" Width="400">

    <Grid>
        <!-- Boxes principales -->
        <Label Content="Nombre:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="30" Margin="10,30,0,0"/>

        <Label Content="Dirección:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="30" Margin="10,90,0,0"/>

        <Label Content="Teléfono:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0"/>
        <TextBox x:Name="txtPhone" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="30" Margin="10,150,0,0"/>

        <CheckBox x:Name="chkActive" Content="Activo" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,190,0,0"/>

        <!-- Button guardar -->
        <Button x:Name="btnGuardar" Content="Guardar" Width="150" Height="40" VerticalAlignment="Bottom" Margin="10" Click="btnGuardar_Click"/>
    </Grid>
</Window>
