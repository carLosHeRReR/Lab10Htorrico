<Window x:Class="Lab07.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Clientes" Height="450" Width="800">

    <Grid>
        <!-- DataGrid para mostrar los clientes -->
        <DataGrid x:Name="dgSimple" Height="350" VerticalAlignment="Top" Margin="10" />

        <!-- Botón para Listar -->
        <Button x:Name="btnListar" Content="Listar Clientes" Width="150" Height="40" VerticalAlignment="Bottom" Margin="55,0,595,34" Click="btnListar_Click"/>

        <!-- Botón para Insertar -->
        <Button x:Name="btnInsertar" Content="Insertar Cliente" Width="150" Height="40" VerticalAlignment="Bottom" Margin="250,0,400,34" Click="btnInsertar_Click"/>

        <!-- Botón para Modificar -->
        <Button x:Name="btnModificar" Content="Modificar Clientes" Width="150" Height="40" VerticalAlignment="Bottom" Margin="437,0,213,34" Click="btnModificar_Click"/>

        <Button x:Name="btnEliminar" Content="Eliminar Cliente" Width="150" Height="40" VerticalAlignment="Bottom" Margin="620,0,30,34" Click="btnEliminar_Click"/>

    </Grid>
</Window>
