<Window x:Class="Lab07.EliminarClienteForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eliminar Cliente" Height="200" Width="400">
    <Grid>
        <Label Content="Customer ID:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="txtCustomerId" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="30" Margin="10,30,0,0"/>

        <Button x:Name="btnConfirmarEliminar" Content="Eliminar" Width="80" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Click="btnConfirmarEliminar_Click"/>
    </Grid>
</Window>
